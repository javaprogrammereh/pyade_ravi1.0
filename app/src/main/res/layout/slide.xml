<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bgLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/slide_margin"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/slide_margin"
            android:background="@drawable/shape_border_gery"
            android:padding="20dp"
            android:src="@drawable/locationlogo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/slide_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/slide_title_margin_top"
            android:text="@string/slide_1_title"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="@dimen/slide_title_text_size" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/slide_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/slide_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/slide_desc_margin_top"
            android:gravity="center"
            android:paddingLeft="@dimen/slide_desc_padding_rl"
            android:paddingRight="@dimen/slide_desc_padding_rl"
            android:textColor="@color/black"
            android:textSize="@dimen/slide_desc_text_size" />

    </LinearLayout>


</RelativeLayout>